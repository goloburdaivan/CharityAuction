<div id="content" class="row">
    <div class="col-md-3">
        <form method="post" action="/photos" enctype="multipart/form-data" class="form-container">
    <h3 class="form-title">Створення лоту</h3>
    <div class="form-group">
        <label for="title" class="form-label">Назва:</label>
        <input type="text" id="title" name="Title" class="form-input" required>
    </div>
    <div class="form-group">
        <label for="description" class="form-label">Опис:</label>
        <textarea id="description" name="Description" class="form-input"></textarea>
    </div>
    <div class="form-group">
        <label for="categoryId" class="form-label">Категорія:</label>
        <select id="categoryId" name="CategoryId" class="form-select" required>
            <option value="">-- Виберіть категорію --</option>
                    @foreach (var category in Model.Categories)
                    {
                            <option value="@category.Id">@category.Title</option>
                    }
        </select>
    </div>
    <div class="form-group">
        <label for="startingPrice" class="form-label">Початкова ціна:</label>
        <input type="number" id="startingPrice" name="StartingPrice" min="100" class="form-input" required>
    </div>
        <div class="mb-3">
            <label for="photos" class="form-label">Фотографії:</label>
            <input type="file" id="photos" name="Photos" class="form-control" multiple>
        </div>
    <button type="submit" class="form-button">Створити лот</button>
    <div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }
                else if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
    </div>
</form>
</div>
</div>